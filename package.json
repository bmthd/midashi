{
  "name": "midashi",
  "version": "0.3.1",
  "description": "React component for headings",
  "keywords": [
    "react",
    "typescript"
  ],
  "author": "bmthd <jougennotuki67@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bmthd/midashi"
  },
  "homepage": "https://github.com/bmthd/midashi",
  "type": "module",
  "files": [
    "/dist"
  ],
  "main": "./dist/index.umd.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc",
    "format:test": "biome format ./lib",
    "format:fix": "biome format --write ./lib",
    "lint:test": "biome lint ./lib",
    "lint:safe-fix": "biome check --apply ./lib",
    "lint:fix": "biome check --apply-unsafe ./lib",
    "test": "vitest",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.7.3",
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^15.0.7",
    "@types/node": "^20.12.11",
    "@types/react": "^18.3.2",
    "@vitejs/plugin-react": "^4.2.1",
    "happy-dom": "^14.10.1",
    "typescript": "^5.4.5",
    "vite": "^5.2.10",
    "vite-plugin-dts": "^3.9.1",
    "vitest": "^1.6.0"
  },
  "peerDependencies": {
    "react": ">=17.0.0"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  }
}