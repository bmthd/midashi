{
  "name": "midashi",
  "version": "0.3.2",
  "description": "React component for headings",
  "keywords": [
    "react",
    "typescript"
  ],
  "author": "bmthd <jougennotuki67@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bmthd/midashi"
  },
  "homepage": "https://github.com/bmthd/midashi",
  "type": "module",
  "files": [
    "/dist"
  ],
  "main": "./dist/index.umd.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc",
    "format:test": "biome format ./lib",
    "format:fix": "biome format --write ./lib",
    "lint:test": "biome lint ./lib",
    "lint:safe-fix": "biome check --apply ./lib",
    "lint:fix": "biome check --apply-unsafe ./lib",
    "eslint:test": "eslint .",
    "eslint:fix": "eslint . --fix",
    "lint:all": "npm run lint:test && npm run eslint:test",
    "test": "vitest",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.7.3",
    "@eslint/js": "^9.31.0",
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^16.0.0",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.2",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^9.31.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "happy-dom": "^17.0.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.37.0",
    "vite": "^6.0.0",
    "vite-plugin-dts": "^4.0.0",
    "vitest": "^3.0.0"
  },
  "peerDependencies": {
    "react": ">=17.0.0"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  }
}
